{
  "mongo": {
    "url": "mongodb://localhost/openhim-test",
    "atnaUrl": "mongodb://localhost/openhim-test"
  },
  "logger": {
    "level": "fatal"
  },
  "router": {
    "httpPort": 6001,
    "httpsPort": 6000
  },
  "api": {
    "enabled" : true,
    "httpsPort": 9090,
    "authWindowSeconds": 50,
    "maxBodiesSizeMB": 15,
    "maxPayloadSizeMB": 50,
    "truncateSize": 10,
    "truncateAppend": "\n[truncated ...]"
  },
  "statsd": {
    "enabled": true,
    "host": "localhost"
  },
  "application": {
    "name": "openhim.test"
  },
  "caching": {
    "enabled": false
  },
  "agenda": {
    "startupDelay": 0
  },
  "certificateManagement": {
    "watchFSForCert": false,
    "certPath": "resources/certs/default/cert.pem",
    "keyPath": "resources/certs/default/key.pem"
  }
}
